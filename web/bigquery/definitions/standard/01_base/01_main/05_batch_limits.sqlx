config {
  type: "operations",
  name: "05_batch_limits",
  disabled: sp.model_disabled,
  dependencies: ["04_sessions_to_include"],
  hermetic: true,
  hasOutput: false,
  tags: ["sp_web", "sp_base"]
}

-- Create a new limit based on this data
CREATE OR REPLACE TABLE `${sp.scratch_schema}.base_run_limits${sp.entropy}` AS(
  SELECT
    MIN(min_tstamp) AS lower_limit,
    (SELECT upper_limit FROM `${sp.scratch_schema}.base_new_events_limits${sp.entropy}`) AS upper_limit

  FROM
    `${sp.scratch_schema}.base_sessions_to_include${sp.entropy}`
);
